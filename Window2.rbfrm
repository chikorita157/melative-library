d = true		  else		    If Textfield2.text="" then		      // no password error		      self.errboxshow("Melative Library was unable to log you in since you didn't enter a password.","Enter a valid password and try logging in again. ")		      ProgressWheel1.visible = false		      Loginstatus.text = "Fail: Check Username/Password…"		      pushbutton1.enabled = true		    else		      // using API to check credentials		      Dim socket1 as New HTTPSocket		      dim data as string		      socket1.yield=true		      app.loginenc = EncodeBase64(TextField1.text + ":" + TextField2.text)		      socket1.setrequestheader "Authorization","Basic " + app.loginenc		      data = socket1.get("http://melative.com/api/account/verify_credentials.xml",10)		      If socket1.httpstatuscode = 200 then		        // login is a success		        // Store Password and Username		        app.memusername = TextField1.text		        app.mempassword = TextField2.text		        app.prefs.root.SetString("Username",TextField1.text)		        // Remember Password Setting		        app.prefs.root.SetBoolean("RememberPassword",checkbox1.value)		        app.prefs.root.SetBoolean("AutoLogin",autologin.value)		        app.prefs.Save		        Window1.show		        Window2.close		        //Elseif  socket1.httpstatuscode =		      Elseif socket1.httpstatuscode = 401 then		        // if login fails		        self.errboxshow("Melative Library was unable to log you in since you don't have the correct Username and/or Password.","Check your username and password and try logging in again. If you recently changed your password, enter your new password and try logging in.")		        ProgressWheel1.visible = false		        Loginstatus.text = "Error: Incorrect Password or Username…"		        app.loginenc = ""		        pushbutton1.enabled = true		      else		        self.errboxshow("Melative Library was unable to log you in since it cannot connect to the server. ", "Check your internet connection and try logging in again.")		        ProgressWheel1.visible = false		        Loginstatus.text = "Error: No Internet Connection…"		        app.loginenc = ""		        pushbutton1.enabled = true		      end if		    end if		  end if		End Sub	#tag EndEvent#tag EndEvents#tag Events PushButton2	#tag Event		Sub Action()		  quit		End Sub	#tag EndEvent#tag EndEvents#tag Events StaticText5	#tag Event		Function MouseDown(X As Integer, Y As Integer) As Boolean		  ShowURL "http://melative.com/register"		  		End Function	#tag EndEvent#tag EndEvents#tag Events Autologin	#tag Event		Sub Open()		  me.value = app.prefs.root.GetBoolean("AutoLogin",false)		  		End Sub	#tag EndEvent#tag EndEvents